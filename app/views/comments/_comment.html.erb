      <td><div class="comment-timestamp"><%= time_ago_in_words(comment.created_at) %></div></td>
      <td><div class="comment-user"><%= comment.name %> : </div></td>

      <td>
        <div id="comment-<%= comment.id %>" data-commentid="<%= comment.id %>" class="comment comment-step1">
